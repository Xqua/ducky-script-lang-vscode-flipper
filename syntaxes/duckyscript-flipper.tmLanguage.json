{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.duckyscript-flipper",
	"name": "Ducky Script",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#string"
		},
		{
			"include": "#number"
		}
	],
	
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.duckyscript-flipper",
				"match": "^((CTRL-ALT|CTRL-SHIFT|ALT-SHIFT|ALT-GUI|GUI-SHIFT|GUI|WINDOWS|APP|MENU|SHIFT|ALT|CONTROL|CTRL|ALTCHAR|ALTSTRING|ALTCODE|SYSRQ|DOWNARROW|DOWN|UPARROW|UP|LEFTARROW|LEFT|RIGHTARROW|RIGHT|BREAK|PAUSE|CAPSLOCK|DELETE|END|ENTER|ESCAPE|ESC|HOME|INSERT|NUMLOCK|PAGEUP|PAGEDOWN|PRINTSCREEN|SCROLLLOCK|SPACE|TAB|F1|F2|F3|F4|F5|F6|F7|F8|F9|F10|F11|F12)\\s?)((([A-Z-]|[a-z-]|(CTRL-ALT|CTRL-SHIFT|ALT-SHIFT|ALT-GUI|GUI-SHIFT|GUI|WINDOWS|APP|MENU|SHIFT|ALT|CONTROL|CTRL|ALTCHAR|ALTSTRING|ALTCODE|SYSRQ|DOWNARROW|DOWN|UPARROW|UP|LEFTARROW|LEFT|RIGHTARROW|RIGHT|BREAK|PAUSE|CAPSLOCK|DELETE|END|ENTER|ESCAPE|ESC|HOME|INSERT|NUMLOCK|PAGEUP|PAGEDOWN|PRINTSCREEN|SCROLLLOCK|SPACE|TAB|F1|F2|F3|F4|F5|F6|F7|F8|F9|F10|F11|F12))\\s)*)?"
				}]
		},
		"comment": {
			"name": "comment.line.duckyscript-flipper",
			"begin": "^REM\\s",
			"end": "$"
		},
		"variable": {
			"patterns": [{
				"name": "keyword.variable.duckyscript-flipper",
				"match": "^(DELAY|DEFAULT_DELAY|DEFAULTDELAY|REPEAT|STRING)\\s"
			}]
		},
		"string": {
			"name": "string.duckyscript-flipper",
			"begin": "(?<=STRING\\s).*",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.duckyscript-flipper",
					"match": "\\\\."
				}
			]
		},
		"number": {
			"name": "constant.numeric.duckyscript-flipper",
			"match" : "[0-9]*(\\.[0-9]*)?"
		}
	}
}
